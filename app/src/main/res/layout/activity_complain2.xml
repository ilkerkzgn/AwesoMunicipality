<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complain2">

    <ImageView
        android:id="@+id/background2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_repeat" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_complain2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/takeapicture"
        android:layout_width="301dp"
        android:layout_height="63dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_complain2"
        app:srcCompat="@drawable/takeapicture" />

    <ImageView
        android:id="@+id/icon_camera"
        android:layout_width="117dp"
        android:layout_height="111dp"
        android:layout_marginTop="12dp"
        android:onClick="icon_camera"
        app:layout_constraintEnd_toEndOf="@+id/takeapicture"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/takeapicture"
        app:layout_constraintTop_toBottomOf="@+id/takeapicture"
        app:srcCompat="@drawable/icon_camera" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="325dp"
        android:layout_height="387dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_complain2"
        app:srcCompat="@drawable/applogo_normal" />

    <ImageView
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="complain2_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview"
        app:srcCompat="@drawable/button_continue"
/>

</androidx.constraintlayout.widget.ConstraintLayout>